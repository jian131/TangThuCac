<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="80dp" android:height="100dp" />
            <solid android:color="#90CAF9" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:gravity="center" android:top="30dp">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="10dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item android:gravity="center" android:top="50dp">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="10dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item android:gravity="center" android:top="70dp">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="10dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
