<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTruyenChu"
        tools:targetApi="31">

        <activity
            android:name="com.jian.tangthucac.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppTruyenChu.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jian.tangthucac.activities.LoginActivity"
            android:exported="false" />

        <activity
            android:name="com.jian.tangthucac.activities.RegisterActivity"
            android:exported="false" />

        <activity
            android:name="com.jian.tangthucac.activities.MainActivity"
            android:exported="false" />

        <activity
            android:name="com.jian.tangthucac.activities.NovelDetailActivity"
            android:exported="false" />

        <activity
            android:name="com.jian.tangthucac.activities.ReadNovelActivity"
            android:exported="false" />

        <activity
            android:name="com.jian.tangthucac.activities.SearchActivity"
            android:exported="false" />

        <activity
            android:name="com.jian.tangthucac.activities.AIChatActivity"
            android:exported="false" />
    </application>

</manifest>
